@page
@model AddTeacherModel
@{
    ViewData["Title"] = "Add New Teacher";
}

<h3 class="text-center mb-4">@ViewData["Title"]</h3>
<div class="container border" style="padding:20px">
    <form method="post" enctype="multipart/form-data">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="Teacher.Name"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Teacher.Name" class="form-control" />
            </div>
            <span class="col-5 text-danger" asp-validation-for="Teacher.Name"></span>
        </div>
        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="Teacher.Age"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Teacher.Age" class="form-control" />
            </div>
            <span class="col-5 text-danger" asp-validation-for="Teacher.Age"></span>
        </div>
        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="Teacher.Sex"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Teacher.Sex" class="form-control" />
            </div>
            <span class="col-5 text-danger" asp-validation-for="Teacher.Sex"></span>
        </div>
        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="Teacher.Image"></label>
            </div>
            <div class="col-5">
                <input type="file" asp-for="Teacher.Image" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Save" />
            </div>
        </div>
    </form>
</div>