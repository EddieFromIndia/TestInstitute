@page
@model IndexModel
@{
    ViewData["Title"] = "Add New Student";
}

<h3 class="text-center mb-4">@ViewData["Title"]</h3>
<div class="container border" style="padding:20px">
    <form method="post" enctype="multipart/form-data">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="Student.Name"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Student.Name" class="form-control" />
            </div>
            <span class="col-5 text-danger" asp-validation-for="Student.Name"></span>
        </div>
        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="Student.Age"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Student.Age" class="form-control" />
            </div>
            <span class="col-5 text-danger" asp-validation-for="Student.Age"></span>
        </div>
        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="Student.RollNumber"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Student.RollNumber" class="form-control" />
            </div>
            <span class="col-5 text-danger" asp-validation-for="Student.RollNumber"></span>
        </div>
        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="Student.Class"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Student.Class" class="form-control" />
            </div>
            <span class="col-5 text-danger" asp-validation-for="Student.Class"></span>
        </div>
        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="Student.Sex"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Student.Sex" class="form-control" />
            </div>
        </div>
        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="Student.Image"></label>
            </div>
            <div class="col-5">
                <input type="file" asp-for="Student.Image" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Save" />
            </div>
        </div>
    </form>
</div>
