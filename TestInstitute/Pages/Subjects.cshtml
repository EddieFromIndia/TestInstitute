@page
@model SubjectsModel
@{
    ViewData["Title"] = "Subjects List";
}

<h3 class="text-center mb-4">@ViewData["Title"]</h3>
<div class="container border" style="padding:20px">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Class
                </th>
                <th>
                    Languages
                </th>
                <th>
                    Student
                </th>
                <th>
                    Teacher
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (AllVM all in Model.All ?? new())
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => all.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => all.Class)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => all.Languages)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => all.Student)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => all.Teacher)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>